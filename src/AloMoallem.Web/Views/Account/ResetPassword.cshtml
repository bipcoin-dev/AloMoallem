@model AloMoallem.Web.Controllers.ResetPasswordVm

<h1 class="h4 mb-3">إعادة تعيين كلمة المرور</h1>

<form method="post" class="card border-0 shadow-sm p-3" style="max-width:520px;">
  @Html.AntiForgeryToken()
  <input type="hidden" asp-for="Email" />
  <input type="hidden" asp-for="Token" />

  <div class="mb-3">
    <label class="form-label">كلمة مرور جديدة</label>
    <input class="form-control" asp-for="NewPassword" type="password" />
  </div>

  <div class="mb-3">
    <label class="form-label">تأكيد كلمة المرور</label>
    <input class="form-control" asp-for="ConfirmPassword" type="password" />
  </div>

  <div class="text-danger mb-2">@Html.ValidationSummary()</div>

  <button class="btn btn-primary w-100">حفظ</button>
</form>
