@model AloMoallem.Web.Controllers.ForgotPasswordVm

<h1 class="h4 mb-3">نسيت كلمة المرور</h1>

<form method="post" class="card border-0 shadow-sm p-3" style="max-width:520px;">
  @Html.AntiForgeryToken()
  <div class="mb-3">
    <label class="form-label">الإيميل</label>
    <input class="form-control" asp-for="Email" />
  </div>

  <div class="text-danger mb-2">@Html.ValidationSummary()</div>

  <button class="btn btn-primary w-100">إرسال رابط التغيير</button>
</form>
